<h1> New Question for "<%= @topic.title %>"

<%= form_for([@topic, @question]) do |f| %>
  <div class="control-group">
    <label class="control-label">Title</label>
    <div class='controls'>
      <%= f.text_field :title, class:'input-block-level' %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label">Text</label>
    <div class='controls'>
      <%= f.text_area :text, id: 'editor', class:'input-block-level' %>
    </div>
  </div>

  <div class='controls'>
    <%= f.submit "Save", class:'btn'%>
  </div>
<% end %>